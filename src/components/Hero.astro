---
import Button from '@components/Button.astro'
import img1 from '../images/hero-img-1.avif'
import img2 from '../images/hero-img-2.webp'
import img3 from '../images/hero-img-3.avif'
import img4 from '../images/hero-img-4.webp'
 let bigText = `Expérience de contrôle transparent
 avec nos solutions d’automatisation`.split(' ')

 const imgs = ['../images/hero-img-1.avif','../images/hero-img-2.avif','../images/hero-img-3.avif','../images/hero-img-4.avif',]
---

<section id="accueil">

  <h1>
    {bigText.map((letter) => (
      <span>{letter + ' '}</span>
    ))
    }
  </h1>
  <p>
    Votre partenaire en materiels d'automatismes pour portail, <br> porte de garage, barriere levante de parking, porte <br> automatique pietonne et pieces detachees
  </p> 

  <Button>

  </Button>
</section>
<div class="hero-img">
  <figure>
    <img src={img1} alt="Porte automatique">
  </figure>
  <figure>
    <img src={img2} alt="Porte automatique">
  </figure>
  <figure>
    <img src={img3} alt="Porte automatique">
  </figure>
  <figure>
    <img src={img4} alt="Porte automatique">
  </figure>
</div>





<style lang="scss">

#accueil {

    padding-top: 8rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    margin: 0;
  }
  
   h1 {
    font-size: clamp(25px, 5vw + 1rem, 20rem);
    font-family: var(--big-text);
    text-transform: uppercase;
    line-height: 1;
  }

  p {
    text-transform: uppercase;
    /* line-height: 1; */
    font-weight: 600;
  }

  .hero-img {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    padding-inline: 3vw;

   
  }

  figure {
    overflow: hidden;
    border-radius: 3px;
  }

  img {
    transition: transform 0.13s ease-out;
  }

  img:hover {
    transform: scale(1.1);
  }


  @media (max-width: 1250px) {
  .hero-img {
    grid-template-columns: repeat(2, 1fr);
  }
}
</style>