---
import Button from '@components/Button.astro'
import img1 from '../images/hero-img-1.avif'
import img2 from '../images/hero-img-2.webp'
import img3 from '../images/hero-img-3.avif'
import img4 from '../images/hero-img-4.webp'
 let bigText = `Expérience de contrôle transparent
 avec nos solutions d’automatisation`.split(' ')

---

<section id="accueil">

  <h1>
    {bigText.map((letter, idx) => (
      <span data-sal="slide-up" data-sal-duration="1000" data-sal-delay={100 * (idx + 1)}>{letter + ' '}</span>
    ))
    }
  </h1>
  <p data-sal="zoom-in" data-sal-duration="1200" >
    Votre partenaire en materiels d'automatismes pour portail, <br> porte de garage, barriere levante de parking, porte <br> automatique pietonne et pieces detachees
  </p> 

  <div data-sal="slide-left" data-sal-duration="1400">
    <a href="/#contacts">
      <Button>
      </Button>
    </a>
    </div>
</section>
<div class="hero-img">
  <figure data-sal="slide-up" data-sal-delay="100" data-sal-duration="800">
    <img src={img1} alt="Porte automatique">
  </figure>
  <figure data-sal="slide-up" data-sal-delay="200" data-sal-duration="800">
    <img src={img2} alt="Porte automatique">
  </figure>
  <figure data-sal="slide-up" data-sal-delay="300" data-sal-duration="800">
    <img src={img3} alt="Porte automatique">
  </figure>
  <figure data-sal="slide-up" data-sal-delay="400" data-sal-duration="800">
    <img src={img4} alt="Porte automatique">
  </figure>
</div>





<style lang="scss">

#accueil {

    padding-top: 8rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    margin: 0;
  }
  
   h1 {
    font-size: clamp(25px, 5vw + 1rem, 20rem);
    font-family: var(--big-text);
    text-transform: uppercase;
    line-height: 1;
    display:flex;
    flex-wrap: wrap;
  }

  span {
    display:block;
  }

  p {
    text-transform: uppercase;
    /* line-height: 1; */
    font-weight: 600;
  }

  .hero-img {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    padding-inline: 3vw;

   
  }

  figure {
    overflow: hidden;
    border-radius: 3px;
  }

  img {
    transition: transform 0.13s ease-out;
  }

  img:hover {
    transform: scale(1.1);
  }


  @media (max-width: 1250px) {
  .hero-img {
    grid-template-columns: repeat(2, 1fr);
  }
}
</style>