<section id="produits">
  <article id="barriere-levante">
    <h3>BARRIERE LEVANTE TRIPODE ET TOURNIQUET</h3>
    <div class="products">
      {
        cardsData.barriere.map((item) => (
          <div class="card">
            <figure>
              <img src={item.img} alt={item.title} />
            </figure>
            <h4>{item.title}</h4>
          </div>
        ))
      }
    </div>
  </article>

  <article id="motorisation-portail">
    <h3>MOTORISATION PORTAIL</h3>
    <div class="products">
      {
        cardsData.motor.map((item) => (
          <div class="card">
            <figure>
              <img src={item.img} alt={item.title} />
            </figure>
            <h4>{item.title}</h4>
          </div>
        ))
      }
    </div>

    <div></div>
    <article id="porte-garage">
      <h3>PORTE DE GARAGE</h3>
      <div class="products">
        {
          cardsData.porteGarage.map((item) => (
            <div class="card">
              <figure>
                <img src={item.img} alt={item.title} />
              </figure>
              <h4>{item.title}</h4>
            </div>
          ))
        }
      </div>
    </article>
