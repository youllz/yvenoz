<style>
  section {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 10rem;
  }

  article {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .products {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
  }

  .card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  h3 {
    color: var(--text);
    position: relative;
    display: inline-block;


  }
  h3::before {
    content: "";
    position: absolute;
    height: 2px ;
    width: 100%;
    display: block;
    background-color: var(--accent);
    bottom: -3px;
  }
</style>
